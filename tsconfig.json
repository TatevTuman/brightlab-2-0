// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react", // https://stackoverflow.com/questions/62859458/what-is-the-use-of-jsx-property-in-tsconfig-json
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node", // https://www.typescriptlang.org/docs/handbook/module-resolution.html#node
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      /*
        also check gatsby-node.js onCreateWebpackConfig aliases
        and .storybook/main.js
        and jest.config.ts with moduleNameMapper
      */
      "~hooks": ["src/hooks/EXPORT.ts"],
      "~hocs": ["src/hocs/EXPORT.ts"],

      "~graphql": ["src/graphql/EXPORT.ts"],
      "~fragments": ["src/graphql/fragments/EXPORT.ts"],

      "~layouts": ["src/components/layouts/EXPORT.ts"],
      "~sections": ["src/components/sections/EXPORT.ts"],
      "~seo": ["src/components/seo/EXPORT.ts"],

      "~svg": ["src/elements/svg/EXPORT.tsx"],
      "~ui": ["src/elements/ui/EXPORT.ts"],
      "~ux": ["src/elements/ux/EXPORT.ts"],

      "~images/*": ["static/images/*"],
      "~styles/*": ["static/styles/*"],

      "~types": ["src/types/EXPORT.ts"],
      "~utils": ["src/utils/EXPORT.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["node_modules", "static", "public", ".cache"]
}

// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react", // https://stackoverflow.com/questions/62859458/what-is-the-use-of-jsx-property-in-tsconfig-json
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node", // https://www.typescriptlang.org/docs/handbook/module-resolution.html#node
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      /*
        also check gatsby-node.js onCreateWebpackConfig aliases
        and .storybook/main.js
        and jest.config.ts with moduleNameMapper
      */
      "~components": ["src/components/index.ts"],
      "~elements": ["src/elements/index.ts"],
      "~layouts": ["src/layouts/index.ts"],
      "~modules": ["src/modules/index.ts"],
      "~types": ["src/types/index.ts"],
      "~graphql": ["src/graphql/index.ts"],
      "~fragments": ["src/graphql/fragments/index.ts"],
      "~utils": ["src/utils/index.ts"],
      "~hooks": ["src/hooks/index.ts"],
      "~hocs": ["src/hocs/index.ts"],
      "~svg": ["src/svg/index.ts"],

      "~images/*": ["static/images/*"],
      "~styles/*": ["static/styles/*"],
      "~pages-components/*": ["src/pages-components/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["node_modules", "static", "public", ".cache"]
}
